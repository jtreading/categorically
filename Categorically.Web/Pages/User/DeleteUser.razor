@page "/DeleteUser/{Id}"
@using Categorically.Data
@using Categorically.Services.Models
@inject UserService userService
@inject NavigationManager NavigationManager

<h2>Delete User</h2>
<hr />
<h3>Are you sure want to delete this user?</h3>
<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>User Id:</label>
                <label>@usr.UserId</label>
            </div>
            <div class="form-group">
                <label>User Name:</label>
                <label>@usr.UserName</label>
            </div>
            <div class="form-group">
                <label>First Name:</label>
                <label>@usr.FirstName</label>
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <label>@usr.LastName</label>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <label>@usr.Email</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteThisUser" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    User usr = new User();
    protected override async Task OnInitializedAsync()
    {
        usr = await Task.Run(() => userService.GetUserAsync(Convert.ToInt32(Id)));
    }
    protected async void DeleteThisUser()
    {
        await userService.DeleteUserAsync(usr);
        NavigationManager.NavigateTo("Users");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Users");
    }
}