@page "/EditUser/{UserId}"
@using Categorically.Data
@using Categorically.Services.Models
@inject UserService userService
@inject NavigationManager NavigationManager

<h2>Edit User</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="UserId" class="control-label">User ID</label>
                <input disabled form="UserId" class="form-control" @bind="@usr.UserId" />
            </div>
            <div class="form-group">
                <label for="UserName" class="control-label">UserName</label>
                <input form="UserName" class="form-control" @bind="@usr.UserName" />
            </div>
            <div class="form-group">
                <label for="FirstName" class="control-label">First Name</label>
                <input form="FirstName" class="form-control" @bind="@usr.FirstName" />
            </div>
            <div class="form-group">
                <label for="LastName" class="control-label">Last Name</label>
                <input form="LastName" class="form-control" @bind="@usr.LastName" />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">Email</label>
                <input form="Email" class="form-control" @bind="@usr.Email" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateUser" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string UserId { get; set; }
    User usr = new User();
    protected override async Task OnInitializedAsync()
    {
        usr = await Task.Run(() => userService.GetUserAsync(Convert.ToInt32(UserId)));
    }
    protected async void UpdateUser()
    {
        await userService.UpdateUserAsync(usr);
        NavigationManager.NavigateTo("Users");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Users");
    }
}