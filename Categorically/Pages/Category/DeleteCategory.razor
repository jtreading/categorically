@page "/DeleteCategory/{CategoryId}"
@using Categorically.Data
@inject CategoryService categoryService
@inject NavigationManager NavigationManager

<h2>Delete Category</h2>
<hr />
<h3>Are you sure you want to delete this category?</h3>
<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>Category ID:</label>
                <label>@category?.CategoryId</label>
            </div>
            <div class="form-group">
                <label>Category Name:</label>
                <label>@category?.CategoryName</label>
            </div>
            <div class="form-group">
                <label>User:</label>
                <label>@(category?.User?.UserName)</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteThisCategory" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string categoryId { get; set; }

    Category category = new();

    protected override async Task OnInitializedAsync()
    {
        category = await categoryService.GetCategoryAsync(Convert.ToInt32(categoryId));
    }

    protected async Task DeleteThisCategory()
    {
        await categoryService.DeleteCategoryAsync(category);
        NavigationManager.NavigateTo("Categories");
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("Categories");
    }
}
